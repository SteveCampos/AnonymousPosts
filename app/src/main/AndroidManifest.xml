<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.stevecampos.fire.anonymouschat">

    <application
        android:name="apps.stevecampos.fire.anonymouschat.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="apps.stevecampos.fire.anonymouschat.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.LigthStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="apps.stevecampos.fire.anonymouschat.intro.IntroActivity"
            android:theme="@style/AppTheme.LigthStatusBar" />
        <activity
            android:name="apps.stevecampos.fire.anonymouschat.chat.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="apps.stevecampos.fire.anonymouschat.main.MainActivity"
            android:theme="@style/AppTheme.PrimaryColorStatusBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="apps.stevecampos.fire.anonymouschat.main.MainActivity" />
        </activity>
    </application>

</manifest>